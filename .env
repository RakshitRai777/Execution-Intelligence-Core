# Application Settings
APP_NAME=AI Execution Intelligence Layer
VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://eil_user:eil_password@localhost:5432/eil_database

# Redis
REDIS_URL=redis://localhost:6379

# Vector Database
CHROMA_URL=http://localhost:8001
CHROMA_COLLECTION_NAME=eil_policies

# AI System Configuration
USE_LOCAL_AI=true
KNOWLEDGE_BASE_PATH=knowledge_base.json
TRAINING_MODE=automatic

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# CORS
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Background Tasks
MAX_WORKERS=4
TASK_TIMEOUT=300

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Webhooks
WEBHOOK_SECRET=webhook-secret-change-in-production
WEBHOOK_TIMEOUT=30

# Feature Flags
ENABLE_PREDICTIONS=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTO_RESOLUTION=false

# Performance
MAX_QUERY_RESULTS=1000
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
ENABLE_AUDIT_LOG=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
